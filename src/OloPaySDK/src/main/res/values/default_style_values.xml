    <dimen name="olopay_paymentcarddetailsmultilineview_errortext_textsize">@dimen/olopay_errortext_textsize</dimen>
    <color name="olopay_paymentcarddetailsmultilineview_errortext_textcolor">@color/olopay_errortext_textcolor</color>

